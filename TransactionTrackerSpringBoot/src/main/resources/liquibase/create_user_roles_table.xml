<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="Me" id="create_user_roles_join_table">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_fk_from_user_roles_to_users" author="Me">
        <addForeignKeyConstraint baseTableName="user_roles" baseColumnNames="user_id"
                                 constraintName="FK_USER_ROLES_TO_USERS"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create_fk_from_user_roles_to_roles" author="Me">
        <addForeignKeyConstraint baseTableName="user_roles" baseColumnNames="role_id"
                                 constraintName="FK_USER_ROLES_TO_ROLES"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>

